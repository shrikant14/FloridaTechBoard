<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/button_anim_notify"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notifyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Notification Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#795548"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/notifyDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyTitle"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="sd sdkjaksd sakd ksa dks dkasj as djsd jashdjkshd jkashd jashd ajsd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4527A0"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/notifyHashTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notifyDetails"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="#cs2017 #in-campus #library"
        android:textColor="#000"
        android:textSize="14sp" />


</RelativeLayout>